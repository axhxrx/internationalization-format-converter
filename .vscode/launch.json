  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Launch Program",
      "type": "node",
      "program": "${workspaceFolder}/loadLocalizationFromFile.ts",
      "cwd": "${workspaceFolder}",
      "env": {},
      "runtimeExecutable": "${env:HOME}/.deno/bin/deno",
      "runtimeArgs": [
        "run",
        "--unstable",
        "--inspect-wait",
        "--allow-all"
      ],
      "attachSimplePort": 9229
    },
    {
      "request": "launch",
      "name": "Debug tests",
      "type": "node",
      "program": "${fileDirname}/${fileBasename}",
      "cwd": "${workspaceFolder}",
      "env": {},
      "runtimeExecutable": "${env:HOME}/.deno/bin/deno",
      "runtimeArgs": [
        "test",
        "--allow-read",
        "--allow-write",
        "--unstable-sloppy-imports",
        "--inspect-wait",
        "--allow-env"
      ],
      "attachSimplePort": 9229
    },
    {
      "request": "launch",
      "name": "Debug mod.ts w args",
      "type": "node",
      "program": "${workspaceFolder}/mod.ts",
      "cwd": "${workspaceFolder}",
      "env": {},
      "runtimeExecutable": "${env:HOME}/.deno/bin/deno",
      "runtimeArgs": [
        "run",
        "--allow-read",
        "--allow-write",
        "--unstable-sloppy-imports",
        "--inspect-wait",
        "--allow-env"
      ],
      "args": [
        "export",
        "FIXME-PUT-WHATEVER-YOU-WANT-TO-DEBUG-HERE",
        "foo.json",
        "--dry-run"
      ],
      "attachSimplePort": 9229
    }
  ]
}